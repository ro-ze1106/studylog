<% provide(:title, "問題情報の編集") %>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@problem) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <span class="picture">
          <%= f.label :picture %>　<span class="input-unneed">※任意</span>
          <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png', class: 'form-control', id: 'problem_picture' %>
        </span>
        <div class = 'form-group'>
          <%= f.label :study_type %><span class="input-need">※必須</span>
          <%= f.text_field :study_type, class: 'form-control', id: 'problem_study_type' %>
        </div>
        <div class = 'form-group'>
          <%= f.label :title %><span class="input-need">※必須</span>
          <%= f.text_field :title, class: 'form-control', id: 'problem_title' %>
        </div>
        <div class = 'form-group'>
          <%= f.label :explanation_text %><span class="input-unneed">※任意</span>
          <%= f.text_field :explanation_text, class: 'form-control', id: 'problem_explanation_text' %>
        </div>
        <div class = 'form-group'>
        <%= f.label :problem_text %><span class="input-need">※必須</span>
        <%= f.text_field :problem_text, class: 'form-control', id: 'problem_problem_text' %>
      </div>
      <div class = 'form-group'>
        <%= f.label :answer %><span class="input-need">※必須</span>
        <%= f.text_field :answer, class: 'form-control', id: 'problem_answer' %>
      </div>
      <div class = 'form-group'>
          <%= f.label :problem_explanation %><span class="input-unneed">※任意</span>
          <%= f.text_field :problem_explanation, class: 'form-control', id: 'problem_problem_explanation' %>
        </div>
        <div class = 'form-group'>
          <%= f.label :target_age %><span class="input-unneed">※任意</span>
          <%= f.text_field :target_age, class: 'form-control', id: 'problem_target_age' %>
        </div>
        <div class = 'form-group'>
          <%= f.label :reference %><span class="input-unneed">※任意</span>
          <%= f.text_field :reference, class: 'form-control', id: 'problem_reference' %>
        </div>
        <%= f.submit "更新する", class: "btn btn-primary" %>
        <p></p>
        <%= link_to "問題を削除する", problem_path(@problem), method: :delete,
                                                   data: { confirm: "本当に削除しますか？" } %>
      <% end %>
    </div>
  </div>
</div>