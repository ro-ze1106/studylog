<% @problem = problem %>
<li id="problem-<%= problem.id %>">
  <div class="row">
    <div class="col-md-4">
      <span>
        <%= link_to gravatar_for(problem.user,size: 200), problem.user %>
      </span>
    </div>
    <div class="col-md-8 escape-float">
      <span class="question"><%= link_to "問題出題", question_problem_path(problem) %></span><br>
      <%= render 'users/favorite_form' %>
      <span class="study_type">教科：<%= problem.study_type %></span><br>
      <span class="title">タイトル名：<%= link_to problem.title, problem_path(problem) %></span><br>
      <span class="picture">
        <%= image_tag problem.display_picture if problem.picture.attached? %>
      </span><br>
      <span class="explanation_text">説明文：<%= problem.explanation_text %></span><br>
      <span class="problem_text">問題文：<%= problem.problem_text %></span><br>
      <span class="target_age">対象年齢(学年)：<%= problem.target_age %>才</span><br>
      <span class="reference">参考用URL：<%= link_to problem.reference %></span><br>
      <span class="timestamp">
      <%= time_ago_in_words(problem.created_at) %>前に投稿
      </span>
      <% if current_user.admin? || (current_user == problem.user) %>
        <%= link_to "削除", problem_path(problem), method: :delete,
                          data: { confirm: "本当に削除しますか？" } %>
      </div>
    <% end %>
  </div>
</li>