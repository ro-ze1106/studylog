<% provide(:title, "プロフィール") %>
<div id="fh5co-portfolio">
  <div class="container">
    <h3 class="title-profile">プロフィール<h3>
    <div class="row">
      <aside class="col-md-4">
        <div class="user-picture-box">
          <%= gravatar_for @user, size: 100 %>
        </div>
      </aside>
      <div class="col-md-8">
        <section class="show-user-name">
          <%= @user.name %>
        </section>
        <section class="stats">
          <%= render 'shared/stats' %>
        </section>
        <% if current_user == @user %>
        <div class="account-edit"><%= link_to "プロフィール編集", edit_user_path(@user) %></div>
        <% end %>
        <% if current_user.admin? || (current_user == @user) %>
          <div class="account-delete"><%= link_to "アカウント削除", user_path(@user), method: :delete,
                                        data: { confirm: "本当に削除しますか？" } %></div>
        <% end %>
        <br>
        <%= render 'follow_form' if logged_in? %>
      </div>
      <div class="row">
        <div class="col-md-9">
          <% if @user.problems.any? %>
            <h3>問題 (<%= @user.problems.count %>)</h3>
            <ol class="problems">
              <%= render @problems %>
            </ol>
            <%= will_paginate @problems %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>